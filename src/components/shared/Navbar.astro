---
import Search from "@/components/icons/Search.icon.astro";
import User from "../icons/User.icon.astro";
import NavBarLink from "../navBarLink/NavBarLink.astro";

import { PublicRoutes } from "@/consts/routes";
---

<style>
  ul.breadcrumb li + li::before {
    content: "\276F";
    padding-left: 8px;
    padding-right: 4px;
    color: inherit;
  }

  ul.breadcrumb li span {
    opacity: 60%;
  }

  #sidebar {
    -webkit-transition: all 300ms cubic-bezier(0, 0.77, 0.58, 1);
    transition: all 300ms cubic-bezier(0, 0.77, 0.58, 1);
  }

  #sidebar.show {
    transform: translateX(0);
  }

  #sidebar ul li a.active {
    background: #0e0d0f;
    background-color: #0e0d0f;
  }
</style>

<!-- Navbar start -->
<nav
  id="navbar"
  class="fixed top-0 z-40 flex w-full flex-row xl:justify-between bg-black px-4 justify-between"
>
  <button
    id="btnSidebarToggler"
    type="button"
    class="py-4 text-2xl text-yellow-500 hover:text-gray-200"
  >
    <svg
      id="navClosed"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      class="h-8 w-8"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
    </svg>
    <svg
      id="navOpen"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      class="hidden h-8 w-8"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M6 18L18 6M6 6l12 12"></path>
    </svg>
  </button>

  <div
    class="flex flex-row justify-center items-center py-4 text-lg text-white sm:flex"
  >
    <a
      href="/"
      class="text-white font-bold text-2xl hover:text-white select-none"
    >
      Music <span class="bg-yellow-500 text-black">hub</span>
    </a>
  </div>
  <div class="flex flex-row items-center text-2xl">
    <Search width="1.5em" className="text-white cursor-pointer" />
    <User width="1.5em" className="text-white cursor-pointer" />
  </div>
</nav>
<!-- Navbar end -->

<!-- Sidebar start-->
<div id="containerSidebar" class="z-40">
  <div class="navbar-menu relative z-40">
    <nav
      id="sidebar"
      class="fixed left-0 bottom-0 flex w-3/4 -translate-x-full flex-col overflow-y-auto bg-black pt-6 pb-8 sm:max-w-xs lg:w-80"
    >
      <ul class="mb-8 text-sm font-medium">
        <NavBarLink
          class="active flex items-center rounded py-3 pl-3 pr-4 text-gray-50 hover:bg-gray-600 hover:text-white"
          href="#"><span class="select-none">Programacion</span></NavBarLink
        >
        <NavBarLink
          class="active flex items-center rounded py-3 pl-3 pr-4 text-gray-50 hover:bg-gray-600 hover:text-white"
          href=`/${PublicRoutes?.PUBLIC}/${PublicRoutes?.INFORMATION}`
          ><span class="select-none">Informacion</span></NavBarLink
        >
        <NavBarLink
          class="active flex items-center rounded py-3 pl-3 pr-4 text-gray-50 hover:bg-gray-600 hover:text-white"
          href=`/${PublicRoutes?.PUBLIC}/${PublicRoutes?.TRANSMISSION}`
          ><span class="select-none">Transmitimos desde</span></NavBarLink
        >
        <NavBarLink
          class="active flex items-center rounded py-3 pl-3 pr-4 text-gray-50 hover:bg-gray-600 hover:text-white"
          href="#"><span class="select-none">Grupo de ventas</span></NavBarLink
        >
        <NavBarLink
          class="active flex items-center rounded py-3 pl-3 pr-4 text-gray-50 hover:bg-gray-600 hover:text-white"
          href="#"
          ><span class="select-none">Contenido para adultos</span></NavBarLink
        >
        <NavBarLink
          class="active flex items-center rounded py-3 pl-3 pr-4 text-gray-50 hover:bg-gray-600 hover:text-white"
          href="#"><span class="select-none">Juegos</span></NavBarLink
        >
        <NavBarLink
          class="active flex items-center rounded py-3 pl-3 pr-4 text-gray-50 hover:bg-gray-600 hover:text-white"
          href="/"><span class="select-none">Indumentaria</span></NavBarLink
        >
        <NavBarLink
          class="active flex items-center rounded py-3 pl-3 pr-4 text-gray-50 hover:bg-gray-600 hover:text-white"
          href="#"><span class="select-none">MSJ</span></NavBarLink
        >
        <NavBarLink
          class="active flex items-center rounded py-3 pl-3 pr-4 text-gray-50 hover:bg-gray-600 hover:text-white"
          href=`/${PublicRoutes?.PUBLIC}/${PublicRoutes?.DONATE}`
          ><span class="select-none">Donar</span></NavBarLink
        >
        <NavBarLink
          class="active flex items-center rounded py-3 pl-3 pr-4 text-gray-50 hover:bg-gray-600 hover:text-white"
          href="#"><span class="select-none">Purple room</span></NavBarLink
        >
        <NavBarLink
          class="active flex items-center rounded py-3 pl-3 pr-4 text-gray-50 hover:bg-gray-600 hover:text-white"
          href="#"
          ><span class="select-none">Donaciones y adopciones</span></NavBarLink
        >

        <NavBarLink
          class="active flex items-center rounded py-3 pl-3 pr-4 text-gray-50 hover:bg-gray-600 hover:text-white"
          href=`/${PublicRoutes?.PUBLIC}/${PublicRoutes?.SATISFACTORY}`
          ><span class="select-none">Te grada nuestro sitio web?</span
          ></NavBarLink
        >
      </ul>
    </nav>
  </div>
  <div class="mx-auto lg:ml-80"></div>
</div>
<!-- Sidebar end -->

<script type="text/javascript">
  document.addEventListener("DOMContentLoaded", () => {
    const navbar = document.getElementById("navbar");
    const sidebar = document.getElementById("sidebar");
    const btnSidebarToggler = document.getElementById("btnSidebarToggler");
    const navClosed = document.getElementById("navClosed");
    const navOpen = document.getElementById("navOpen");

    btnSidebarToggler.addEventListener("click", (e) => {
      e.preventDefault();
      sidebar.classList.toggle("show");
      navClosed.classList.toggle("hidden");
      navOpen.classList.toggle("hidden");
    });

    sidebar.style.top = parseInt(navbar.clientHeight) - 1 + "px";
  });
</script>
