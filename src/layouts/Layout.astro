---
import HeadBase from "@/components/headBase/HeadBase.astro";
import Header from "@/components/header/Header.astro";
import Navbar from "@/components/shared/Navbar.astro";
import { siteInfo } from "@/consts/siteInfo";
import "../styles/global.style.css";
interface Props {
  title: string;
  image?: string;
  description?: string;
}

const {
  title = siteInfo?.title,
  description = siteInfo?.description,
  image,
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <HeadBase title={title} description={description} />
  </head>
  <body class="bg-black">
    <Header />
    <main>
      <slot />
    </main>
  </body>
</html>
